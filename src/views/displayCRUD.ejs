<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Get CRUD</title>
  </head>
  <style>
    table,
    th,
    td {
      border: 1px solid black;
      border-collapse: collapse;
    }

    .btn-edit {
      background: orange;
      color: white;
      border: none;
      outline: none;
      border-radius: 5px;
      margin-right: 12px;
      margin-left: 12px;
      cursor: pointer;
      padding: 5px 12px;
      display: inline-block;
    }

    .btn-delete {
      display: inline-block;
      background: red;
      border: none;
      outline: none;
      border-radius: 5px;
      cursor: pointer;
      padding: 5px 12px;

    }
  </style>
  <body>
    <table style="width: 100%">
      <tr>
        <th>Email</th>
        <th>Last name</th>
        <th>First name</th>
        <th>Address</th>
        <th>Action</th>
      </tr>
      <tr>
       <% for(var i=0; i < dataTable.length; i++) { %>
          <tr>
            <td><%= dataTable[i].email %></td>
            <td><%= dataTable[i].lastName %></td>
            <td><%= dataTable[i].firstName %></td>
            <td><%= dataTable[i].address %></td>
            <td>
              <a class="btn-edit" href="/edit-crud?id=<%= dataTable[i].id %>">Edit</a>
              <a class="btn-delete" href="">Delete</a>
            </td>
          </tr>
        <% } %>
      </tr>
    </table>
  </body>
</html>
